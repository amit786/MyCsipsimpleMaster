<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_one_background">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/welcome_scr_shade">

        <com.csipsimple.f5chat.font_family.Font_welcome_scr_Tv_regular
            android:id="@+id/f5chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:visibility="visible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/welone_f5_marginbottom"
            android:gravity="center"

            android:text="F5chat"
            android:textColor="#ffffff"
            android:textSize="@dimen/welone_f5_textsize" />

        <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/welone_center_marginbottom"
            android:visibility="visible"
            android:alpha="0.6"
            android:letterSpacing="0"
            android:gravity="center"
            android:text="By logging in, you are agreeing to F5chat"
            android:textColor="#ffffff"
            android:textSize="@dimen/welone_center_textsize" />

        <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
            android:id="@+id/terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:gravity="center"
            android:text="@string/your_string_here"
            android:textColor="#ffffff"
            android:visibility="visible"
            android:textSize="@dimen/welone_terms_textsize"
            android:layout_marginBottom="@dimen/welone_terms_marginbottom"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/terms"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/welone_dot_margintop"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@drawable/swipe_dot_left" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/welone_button_margin"
            android:visibility="invisible"
            android:background="@drawable/button_rounded_corners"
            android:text="Login"
            android:textSize="@dimen/welone_button_textsize"
            android:textColor="#ffffff"/>
    </LinearLayout>
</RelativeLayout>