<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f131a">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkgrey"
        >

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkgrey"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/grey_select_effect"
                android:layout_weight="0.5"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:src="@drawable/back_arrow_chat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Scan QR"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_margin="13dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="@string/scan_qr_received"
            android:textColor="@color/white_with_alpha"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_below="@+id/layout2"
        android:layout_margin="13dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/qr_back"
        android:gravity="center">

        <ImageView
            android:layout_width="278dp"
            android:layout_height="278dp"
            android:layout_gravity="center"
            android:background="@drawable/qr_code" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:layout_width="280dp"
            android:layout_height="49dp"
            android:background="@drawable/button_rounded_corners"
            android:gravity="center"
            android:text="My QR code"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
