<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3342"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/veri_half_layout_marginbottom"
        android:layout_weight="0.65">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/backlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/veri_backarrow_margin"
                    android:background="@drawable/back_arrow" />
            </LinearLayout>

            <com.csipsimple.f5chat.font_family.Font_welcome_scr_Tv_regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="Enter PIN number"

                android:textColor="#ffffff"
                android:textSize="@dimen/veri_enter_pin_textsize" />

            <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:text="Next"

                android:textColor="#ffffff"
                android:textSize="@dimen/veri_next_textsize" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/veri_enter_yourPin_margintop"
                android:gravity="center"
                android:text="Enter your PIN number"
                android:textColor="#ffffff"
                android:textSize="@dimen/veri_enter_yourPin_textsize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="@dimen/veri_dashlayour_margintop"
            android:gravity="center"
            android:orientation="horizontal">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/veri_dashimage_margin"
                    android:background="@drawable/dashsmall" />

                <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
                    android:id="@+id/num1"
                    android:layout_width="@dimen/veri_dashnumber_layoutwidth"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="@dimen/veri_dashnumber_textsize" />

            </RelativeLayout>


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/veri_dashimage_margin"
                    android:background="@drawable/dashsmall" />

                <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
                    android:id="@+id/num2"
                    android:layout_width="@dimen/veri_dashnumber_layoutwidth"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="@dimen/veri_dashnumber_textsize" />

            </RelativeLayout>


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/vari_dashcenter_marginright"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/veri_dashimage_margin"
                    android:background="@drawable/dashsmall" />

                <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
                    android:id="@+id/num3"
                    android:layout_width="@dimen/veri_dashnumber_layoutwidth"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="@dimen/veri_dashnumber_textsize" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/vari_dashcenter_marginleft"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/veri_dashimage_margin"
                    android:background="@drawable/dashsmall" />

                <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
                    android:id="@+id/num4"
                    android:layout_width="@dimen/veri_dashnumber_layoutwidth"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="@dimen/veri_dashnumber_textsize" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/veri_dashimage_margin"
                    android:background="@drawable/dashsmall" />

                <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
                    android:id="@+id/num5"
                    android:layout_width="@dimen/veri_dashnumber_layoutwidth"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="@dimen/veri_dashnumber_textsize" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/veri_dashimage_margin"
                    android:background="@drawable/dashsmall" />

                <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
                    android:id="@+id/num6"
                    android:layout_width="@dimen/veri_dashnumber_layoutwidth"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="@dimen/veri_dashnumber_textsize" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear2"
            android:orientation="vertical">

            <com.csipsimple.f5chat.view.OpenRegularButton
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/veri_submit_marginbottom"
                android:layout_marginLeft="@dimen/veri_submit_marginleft"
                android:layout_marginRight="@dimen/veri_submit_marginright"
                android:layout_marginTop="@dimen/veri_submit_margintop"
                android:background="@drawable/button_rounded_corners"
                android:text="Submit"
                android:padding="10dp"
                android:visibility="invisible"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/veri_submit_textsize" />

            <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/if_not_receive_PIN"
                android:textColor="#ffffff"
                android:textSize="@dimen/veri_if_textsize" />

            <com.csipsimple.f5chat.font_family.Font_Welcome_scr_Tv_light
                android:id="@+id/requestpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/veri_request_pin_margintop"
                android:gravity="center"
                android:text="@string/request_pin_again"
                android:textColor="#ef3f5b"
                android:textSize="@dimen/veri_request_pin_textsize" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/veri_keypad_margintop"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:background="@color/black"
        android:weightSum="1.2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0.5dp"
            android:layout_weight="0.3"
            android:background="#1F242D"
            android:weightSum="0.9">

            <TextView
                android:id="@+id/bt1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/veri_keypad_textsize" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/bt2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="@dimen/veri_keypad_textsize" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/bt3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/veri_keypad_textsize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0.5dp"
            android:layout_weight="0.3"
            android:background="#1F242D"
            android:weightSum="0.9">

            <TextView
                android:id="@+id/bt4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/veri_keypad_textsize" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/bt5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="@dimen/veri_keypad_textsize" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/bt6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="@dimen/veri_keypad_textsize" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0.5dp"
            android:layout_weight="0.3"
            android:background="#1F242D"
            android:weightSum="0.9">

            <TextView
                android:id="@+id/bt7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="@dimen/veri_keypad_textsize" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/bt8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="@dimen/veri_keypad_textsize" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/bt9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="@dimen/veri_keypad_textsize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="#1F242D"
            android:weightSum="0.9">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp"
                android:text=" "
                android:textColor="@color/white"
                android:textSize="30dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/bt0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/veri_keypad_textsize" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/black"></View>


            <LinearLayout
                android:id="@+id/imgclr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/keypad_effect"
                android:gravity="center"
                android:padding="4.5dp">

                <ImageView
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/back_icon" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
