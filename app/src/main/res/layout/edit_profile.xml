<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/contact"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="28dip"
                android:layout_height="28dip"
                android:src="@drawable/back_arrow_chat"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="30dp"

            >
            <ImageView
                android:id="@+id/photo"
                android:layout_width="289dip"
                android:layout_height="327dip"
                android:layout_centerInParent="true"
                android:src="@drawable/edit_picture"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add photo"
                android:layout_alignBottom="@+id/photo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="35dp"
                android:textSize="16sp"
                android:textColor="@color/colorPink"/>

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:text="     Name"
            android:padding="10dp"
            android:textColor="@color/confirmcontact"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:background="@color/light_blue"
            android:layout_marginTop="0.5dp"
            android:textColor="@color/confirmcontact"
            android:text="     8958965898"
            android:textSize="16sp"
            android:padding="10dp"/>
    </RelativeLayout>

</LinearLayout>
