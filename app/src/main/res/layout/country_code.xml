<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ccode_layout_margintop"
        android:layout_marginLeft="@dimen/ccode_layout_marginleft"
        android:layout_marginRight="@dimen/ccode_layout_marginright"
        android:orientation="vertical">
        <TextView
            android:id="@+id/codetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:textColor="@color/white"
            android:textSize="@dimen/ccode_country_textsize"

            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ccode_view_height"
            android:layout_marginTop="@dimen/ccode_view_margintop"
            android:background="@color/lightgrey"/>

    </LinearLayout>
</LinearLayout>
